<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TaskPilot.Desktop.WinApp.Pages.ProjectFormPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskPilot.Desktop.WinApp.Pages"
    xmlns:controls="using:TaskPilot.Desktop.WinApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:TaskPilot.Core.ViewModel"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodel:ProjectFormViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <TextBlock Grid.Row="0" Margin="36,36,36,0"
                   VerticalAlignment="Stretch" MaxWidth="1200"
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Text="{x:Bind ViewModel.Header, Mode=OneWay}"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled" 
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid MaxWidth="1200" Margin="24" RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Name -->
                        <RowDefinition Height="Auto"/>
                        <!-- Color -->
                        <RowDefinition Height="Auto"/>
                        <!-- Description (Markdown Editor) -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                    </Grid.RowDefinitions>

                    <!-- Project Name -->
                    <TextBox Grid.Row="0" 
                         Header="Name" 
                         PlaceholderText="Enter project's name"
                         Text="{x:Bind ViewModel.ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="200"/>

                    <!-- Color Selection -->
                    <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8">
                        <TextBlock Text="Color" Style="{StaticResource BodyTextBlockStyle}"/>
                        <GridView ItemsSource="{x:Bind ViewModel.Colors}"
                              SelectedItem="{x:Bind ViewModel.Color, Mode=TwoWay}"
                              SelectionMode="Single"
                              MaxHeight="120">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="32" Height="32" 
                                        CornerRadius="4"
                                        ToolTipService.ToolTip="{Binding Name}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding HexValue, Converter={StaticResource HexToColorConverter}}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="9"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </StackPanel>

                    <!-- Description with Markdown Editor -->
                    <Grid Grid.Row="2" MinHeight="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                               Text="Description" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               Margin="0,0,0,8"/>

                        <controls:MarkdownEditorControl Grid.Row="1"
                                                    x:Name="DescriptionEditor"
                                                    Text="{x:Bind ViewModel.Description, Mode=TwoWay}"
                                                    PlaceholderText="Enter project description (supports markdown)..."
                                                    MinHeight="180"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Spacing="8">
                        <Button Content="Save" 
                            Style="{StaticResource AccentButtonStyle}"
                            Command="{x:Bind ViewModel.SaveChangesCommand}"/>
                        <Button Content="Cancel"
                            Command="{x:Bind ViewModel.CancelCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
