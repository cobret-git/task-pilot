<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="TaskPilot.Desktop.WinApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskPilot.Desktop.WinApp"
    xmlns:conv="using:TaskPilot.Desktop.WinApp.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Assets/Styles.xaml"/>
                <ResourceDictionary Source="/Controls/ReorderableItemsControl.xaml"/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            
            <conv:HexToColorConverter x:Key="HexToColorConverter"/>
            <conv:BoolToSortIconConverter x:Key="BoolToSortIconConverter"/>
            <conv:BoolToSortTextConverter x:Key="BoolToSortTextConverter"/>
            <conv:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
            <conv:EnumToIntConverter x:Key="EnumToIntConverter"/>
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:PopupTypeToSeverityConverter x:Key="PopupTypeToSeverityConverter"/>

            <FontFamily x:Key="MaterialOutlineBoldIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-Bold.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineExtraLightIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-ExtraLight.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineLightIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-Light.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineMediumIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-Medium.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineRegularIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-Regular.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineSemiBoldIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-SemiBold.ttf#Material Symbols Rounded</FontFamily>
            <FontFamily x:Key="MaterialOutlineThinIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded-Thin.ttf#Material Symbols Rounded</FontFamily>

            <FontFamily x:Key="MaterialFilledBoldIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-Bold.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledExtraLightIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-ExtraLight.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledLightIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-Light.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledMediumIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-Medium.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledRegularIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-Regular.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledSemiBoldIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-SemiBold.ttf#Material Symbols Rounded Filled</FontFamily>
            <FontFamily x:Key="MaterialFilledThinIconFontFamily">ms-appx:///Assets/Fonts/MaterialSymbolsRounded_Filled-Thin.ttf#Material Symbols Rounded Filled</FontFamily>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
